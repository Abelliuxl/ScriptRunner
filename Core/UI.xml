<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\FrameXML\UI.xsd">

    <!-- Main Frame -->
    <Frame name="ScriptRunnerFrame" parent="UIParent" movable="true" enableMouse="true" clampedToScreen="true" hidden="true" frameStrata="MEDIUM" toplevel="true" inherits="BackdropTemplate">
        <Size x="980" y="700"/>
        <Anchors>
            <Anchor point="CENTER"/>
        </Anchors>
        <Layers>
            <Layer level="ARTWORK">
                <FontString name="$parentTitle" inherits="GameFontNormal" text="ScriptRunner">
                    <Anchors>
                        <Anchor point="TOP" x="0" y="-16"/>
                    </Anchors>
                </FontString>
            </Layer>
        </Layers>

        <Frames>
            <!-- Close Button -->
            <Button name="$parentCloseButton" inherits="UIPanelCloseButton">
                <Anchors>
                    <Anchor point="TOPRIGHT" x="0" y="0"/>
                </Anchors>
            </Button>

            <!-- Header Actions -->
            <Button name="$parentTab2" inherits="UIPanelButtonTemplate" text="Reload" id="2">
                <Size x="120" y="28"/>
                <Anchors>
                    <Anchor point="TOPLEFT" x="24" y="-42"/>
                </Anchors>
            </Button>

                <!-- Scripts Page -->
                <Frame name="$parentScriptsPage">
                    <Anchors>
                        <Anchor point="TOPLEFT" x="20" y="-54"/>
                        <Anchor point="BOTTOMRIGHT" x="-20" y="20"/>
                    </Anchors>

                <Frames>
                    <!-- Script List -->
                    <Frame name="$parentListContainer" inherits="InsetFrameTemplate">
                        <Size x="285"/>
                        <Anchors>
                            <Anchor point="TOPLEFT" x="0" y="-48"/>
                            <Anchor point="BOTTOMLEFT" x="0" y="0"/>
                        </Anchors>
                    </Frame>
                    <ScrollFrame name="$parentList" inherits="UIPanelScrollFrameTemplate">
                        <Anchors>
                            <Anchor point="TOPLEFT" relativeTo="$parentListContainer" relativePoint="TOPLEFT" x="8" y="-10"/>
                            <Anchor point="BOTTOMRIGHT" relativeTo="$parentListContainer" relativePoint="BOTTOMRIGHT" x="-32" y="10"/>
                        </Anchors>
                        <ScrollChild>
                            <Frame name="$parentContent">
                                <Size x="200" y="1"/>
                            </Frame>
                        </ScrollChild>
                    </ScrollFrame>
                    
                    <!-- Editor Area-->
                    <Frame name="$parentEditor">
                        <Anchors>
                            <Anchor point="TOPLEFT" relativeTo="$parentListContainer" relativePoint="TOPRIGHT" x="14" y="0"/>
                            <Anchor point="BOTTOMRIGHT" relativeTo="$parent" relativePoint="BOTTOMRIGHT" x="0" y="0"/>
                        </Anchors>
                        
                        <Frames>
                            <!-- Name -->
                            <EditBox name="$parentName" inherits="InputBoxTemplate" autoFocus="false">
                                <Size x="100" y="24"/>
                                <Anchors>
                                    <Anchor point="TOPLEFT" x="6" y="-2"/>
                                    <Anchor point="TOPRIGHT" relativeTo="$parent" relativePoint="TOPRIGHT" x="-6" y="-2"/>
                                </Anchors>
                                <FontString inherits="GameFontNormal" />
                            </EditBox>
                            
                            <!-- Code Editor Background Container -->
                            <Frame name="$parentEditorBackground" inherits="InsetFrameTemplate">
                                 <Anchors>
                                    <Anchor point="TOPLEFT" relativeTo="$parent" relativePoint="TOPLEFT" x="0" y="-34"/>
                                    <Anchor point="BOTTOMRIGHT" relativeTo="$parent" relativePoint="BOTTOMRIGHT" x="0" y="92"/>
                                 </Anchors>
                            </Frame>
                            
                            <!-- Code Editor Container -->
                            <Frame name="$parentEditorContainer">
                                 <Anchors>
                                    <Anchor point="TOPLEFT" relativeTo="$parentEditorBackground" relativePoint="TOPLEFT" x="10" y="-10"/>
                                    <Anchor point="BOTTOMRIGHT" relativeTo="$parentEditorBackground" relativePoint="BOTTOMRIGHT" x="-34" y="10"/>
                                 </Anchors>
                            </Frame>
                            
                            <!-- Controls -->
                            <Button name="$parentSave" inherits="UIPanelButtonTemplate" text="Save">
                                <Size x="116" y="28"/>
                                <Anchors>
                                    <Anchor point="BOTTOMRIGHT" relativeTo="$parent" relativePoint="BOTTOMRIGHT" x="-6" y="10"/>
                                </Anchors>
                            </Button>
                            <Button name="$parentRun" inherits="UIPanelButtonTemplate" text="Run">
                                <Size x="116" y="28"/>
                                <Anchors>
                                    <Anchor point="RIGHT" relativeTo="$parentSave" relativePoint="LEFT" x="-10" y="0"/>
                                </Anchors>
                            </Button>
                            <Button name="$parentNew" inherits="UIPanelButtonTemplate" text="New">
                                <Size x="116" y="28"/>
                                <Anchors>
                                    <Anchor point="TOPLEFT" relativeTo="ScriptRunnerFrameTab2" relativePoint="TOPRIGHT" x="8" y="0"/>
                                </Anchors>
                            </Button>
                              <Button name="$parentDelete" inherits="UIPanelButtonTemplate" text="Delete">
                                  <Size x="116" y="28"/>
                                  <Anchors>
                                      <Anchor point="BOTTOMLEFT" relativeTo="$parent" relativePoint="BOTTOMLEFT" x="6" y="10"/>
                                  </Anchors>
                             </Button>

                            <!-- Options -->
                            <EditBox name="$parentDelay" inherits="InputBoxTemplate" autoFocus="false" numeric="true">
                                <Size x="72" y="24"/>
                                <Anchors>
                                    <Anchor point="BOTTOMRIGHT" relativeTo="$parent" relativePoint="BOTTOMRIGHT" x="-8" y="46"/>
                                </Anchors>
                                <FontString inherits="GameFontNormal" />
                                <Scripts>
                                    <OnEnterPressed>
                                        self:ClearFocus()
                                    </OnEnterPressed>
                                </Scripts>
                            </EditBox>
                            <Frame name="$parentModeDropdown" inherits="UIDropDownMenuTemplate">
                                <Size x="165" y="26"/>
                                <Anchors>
                                    <Anchor point="BOTTOMRIGHT" relativeTo="$parentDelay" relativePoint="BOTTOMLEFT" x="-18" y="-2"/>
                                </Anchors>
                            </Frame>
                        </Frames>
                        
                        <Layers>
                            <Layer level="ARTWORK">
                                <!-- Save Status Text -->
                                <FontString name="$parentSaveStatus" inherits="GameFontRedSmall" text="">
                                    <Anchors>
                                        <Anchor point="BOTTOM" relativeTo="$parentSave" relativePoint="TOP" x="0" y="2"/>
                                    </Anchors>
                                </FontString>
                            </Layer>
                        </Layers>
                    </Frame>
                </Frames>
            </Frame>

            <!-- Settings Page -->
            <Frame name="$parentSettingsPage" setAllPoints="true" hidden="true">
                <Layers>
                    <Layer level="ARTWORK">
                        <FontString inherits="GameFontNormal" text="Settings will be available in a future update.">
                            <Anchors>
                                <Anchor point="CENTER"/>
                            </Anchors>
                        </FontString>
                    </Layer>
                </Layers>
            </Frame>
        </Frames>
    </Frame>
</Ui>
